{
    "compilerOptions": {
        "jsx": "react",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "moduleResolution": "node",
        "target": "ES2021",
        "module": "ES2020",
        "lib": [
            "ES2021",
            "DOM",
            "DOM.Iterable",
            "WebWorker"
        ],
        "sourceMap": true,
        "outDir": "lib",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
